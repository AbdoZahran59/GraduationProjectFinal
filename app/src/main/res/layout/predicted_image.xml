<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@xml/user_address_section">

    <com.example.mapping.UI.CrackReporting.RectangleImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        android:background="@xml/rounded_grey"
        android:scaleType="centerInside"

        />

    <Button
        android:id="@+id/send2DB"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@xml/rounded"
        android:text="@string/confirm"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/hiddenThankYou"
        android:layout_width="287dp"
        android:layout_height="161dp"
        android:text="@string/thank_you_for_helping_us_takes_up_to_date_new_cracks"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:visibility="invisible"

        />


</LinearLayout>
